<div class="container">
    <div class="card text-white bg-dark mt-3 mb-3">
        <div class="card-header">
            <h3>Otras tiendas
                <a href="/new-link/" class="btn btn-primary float-right"><i class="fas fa-plus-circle"></i> Nueva tienda externa</a>
            </h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">Aqui tienes los enlaces a los market place que hayas guardado.</h5>
            <div class="card text-dark bg-dark">
                <div class="row">
                    {{#each links }}
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ title }}</h5>
                                <p class="card-text">{{ description }}</p>
                                <a href="{{ url }}" class="btn btn-primary btn-block">Visitar</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>