<div class="container">
    <div class="card text-white bg-dark mt-3 mb-3">
        <div class="card-header"><h3>Actividad en la página</h3></div>
        <div class="card-body">
            <h5 class="card-title">Seguimiento a lo que ocurre dentro de esta página web.</h5>
            <div class="card text-dark bg-dark">
                <div class="row">
                    {{#each links }}
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ title }}</h5>
                                <p class="card-text">{{ description }}</p>
                                <a href="{{ url }}" class="btn btn-primary btn-block">Visitar</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>