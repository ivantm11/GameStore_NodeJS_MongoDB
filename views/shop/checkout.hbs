<div class="row">
    <div class="container">
        <h1>Pago</h1>
        <h4>Total del pedido $ {{total}}</h4>
        <div id="charge-error" class="alert alert-danger" {{#if noError}}hidden{{/if}}>
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">            
            <div class="row">
                <h5>Datos comprador</h5>
            </div>
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Nombre completo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" placeholder="Juan Pérez González" required name="name" autofocus>
                </div>
            </div>

            <div class="row">
                <h5>Datos tarjeta bancaria</h5>
            </div>
            <div class="form-group row">
                <label for="card-name" class="col-sm-2 col-form-label">Nombre del titular</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="card-name" placeholder="Juan Pérez González" required name="card-name">
                </div>
            </div>
            <div class="form-group row">
                <label for="address" class="col-sm-2 col-form-label">Dirección completa</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="address" placeholder="Calle Esparta No 48 Int 03 Col Álamos Del Benito Juárez CP 03400 CDMX México" required name="address">
                </div>
            </div>
            <div class="form-group row">
                <div class="form-group col-md-4">
                    <label for="card-number">Número de tarjeta</label>
                    <input type="text" class="form-control" id="card-number" placeholder="16 dígitos" required name="card-number">
                </div>
                <div class="form-group col-md-1">
                    <label for="card-expiry-month">Mes V</label>
                    <input type="text" class="form-control" id="card-expiry-month" placeholder="mm" required name="card-expiry-month">
                </div>
                <div class="form-group col-md-1">
                    <label for="card-expiry-year">Año V</label>
                    <input type="text" class="form-control" id="card-expiry-year" placeholder="aaaa" required name="card-expiry-year">
                </div>
                <div class="form-group col-md-1">
                    <label for="card-cvc">CVC</label>
                    <input type="password" class="form-control" id="card-number" placeholder="000" required name="card-cvc">
                </div>
                <div class="form-group col-md-2 text-center">
                        
                </div>
                <div class="form-group col-md-3 align-self-center">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Proceder al pago</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>