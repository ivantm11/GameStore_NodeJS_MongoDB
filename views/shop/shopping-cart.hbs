{{# if products }}
    <div class="row justify-content-md-center">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products}}
                    <li class="list-group-item">
                        <span class="badge badge-warning">{{ this.qty }}</span>
                            <strong>{{ this.item.title }}</strong>
                            <span class="badge badge-danger">$ {{ this.price }}</span>
                        <div class="btn-group float-right">
                            <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown"    aria-haspopup="true" aria-expanded="false">Borrar
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="/reduce/{{this.item._id}}">Borrar 1 pieza</a>
                                <a class="dropdown-item" href="/remove/{{this.item._id}}">Borrar de la lista</a>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row justify-content-md-center mt-2">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h5 class="float-right text-dark">Total:<span class="badge badge-success p-2 ml-2 mr-4">$ {{ totalPrice }}</span></h5>
        </div>
    </div>
    <hr>
    <div class="row justify-content-md-center">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout">
                <button type="button" class="btn btn-success float-right">Proceder al pago</button>
            </a>
        </div>
    </div>
{{else}}
    <div class="container">
        <div class="row justify-content-md-center">
            <h2>No hay items en el carrito :(</h2>
        </div>
    </div>
{{/if}}